{
    "name": "wptechnix/wordpress-coding-standards",
    "description": "A WordPress PHPCS coding standard based on WPTechnix and WPCS, fully compatible with PSR-12, providing modern, secure, and maintainable PHP code.",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "phpcs",
        "coding-standards",
        "coding-standard",
        "standards",
        "code-quality",
        "static-analysis",
        "wptechnix",
        "psr-12",
        "wordpress",
        "wpcs"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "WPTechnix",
            "email": "developers@wptechnix.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "wptechnix/coding-standards": "^2.0"
    },
    "suggest": {
        "dealerdirect/phpcodesniffer-composer-installer": "Automatically register the standard with PHP_CodeSniffer upon Composer install"
    },
    "support": {
        "issues": "https://github.com/wptechnix/wordpress-coding-standards/issues",
        "source": "https://github.com/wptechnix/wordpress-coding-standards"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "installer-name": "WPTechnixWordPress"
    }
}
